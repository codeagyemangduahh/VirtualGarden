@{
    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VirtualGarden.styles.css" asp-append-version="true" />
</head>
<body>
    <main>
        <div class="hero-image d-flex h-100 w-100">
            <div class="home-card mx-auto my-auto d-flex flex-column justify-content-center align-items-center">
                <h1 class="text-center mb-3">Welcome to Virtual Garden</h1>
                <h5 class="text-center mb-3 text-body-secondary">A place to plan and track your garden</h5>
                <a href="/Identity/Account/Login" class="btn btn-success mb-3 w-50">Login</a>
                <span class="text-body-secondary mb-3">Don't have an account?</span>
                <a href="/Identity/Account/Register" class="btn btn-primary w-50">Register</a>
            </div>
        </div>
    </main>
</body>
</html>